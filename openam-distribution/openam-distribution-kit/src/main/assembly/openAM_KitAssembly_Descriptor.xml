<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>openam-distribution-kit</id>
    <formats>
        <format>zip</format>
    </formats>
    <baseDirectory>openam</baseDirectory>
    <!-- Library Dependency -->
    <dependencySets>
        <dependencySet>
            <outputFileNameMapping>${artifact.build.finalName}.${artifact.extension}</outputFileNameMapping>
            <!-- Include fully packaged Modules -->
            <includes>
                <include>org.forgerock.ce.openam:openam-server:war</include>
                <include>org.forgerock.ce.openam:openam-server-only:war</include>
                <include>org.forgerock.ce.openam:openam-clientsdk:jar</include>
                <include>org.forgerock.ce.openam:openam-distauth:war</include>
                <include>org.forgerock.ce.openam:openam-example-clientsdk-cli:zip</include>
                <include>org.forgerock.ce.openam:openam-example-clientsdk-war:war</include>
                <include>org.forgerock.ce.openam:openam-distribution-fedlet-unconfigured:zip</include>
                <include>org.forgerock.ce.openam:openam-distribution-ssoadmintools:zip</include>
                <include>org.forgerock.ce.openam:openam-distribution-ssoconfiguratortools:zip</include>
                <include>org.forgerock.ce.openam:openam-idpdiscovery-war:war</include>
            </includes>
        </dependencySet>
        <dependencySet>
            <outputDirectory>legal-notices</outputDirectory>
            <outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
            <includes>
                <include>${forgerock.license.groupId}:${forgerock.license.artifactId}:txt:${forgerock.license.version}</include>
            </includes>
        </dependencySet>
    </dependencySets>
    <fileSets>
        <fileSet>
            <outputDirectory>legal-notices</outputDirectory>
            <directory>${project.basedir}/../../target/legal-notices</directory>
            <includes>
                <include>**/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <outputDirectory>legal-notices</outputDirectory>
            <directory>../../legal</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>legal-notices</outputDirectory>
            <directory>../../license</directory>
        </fileSet>
        <fileSet>
            <outputDirectory>ldif</outputDirectory>
            <directory>../../openam-federation/OpenFM/src/main/ldif</directory>
        </fileSet>
    </fileSets>

</assembly>
